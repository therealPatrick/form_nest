<h1 class="text-2xl font-bold mb-4"><%= @form.title %></h1>
<p class="text-gray-600 mb-4"><%= @form.description %></p>

<h2 class="text-xl font-semibold mb-2">Questions</h2>
<% @form.questions.each do |question| %>
  <div class="bg-white shadow rounded-lg p-4 mb-4">
    <p class="font-semibold"><%= question.content %></p>
    <p class="text-gray-600">Type: <%= question.question_type %></p>
    <%= link_to 'Edit', edit_form_question_path(@form, question), class: 'text-blue-500 hover:underline' %>
    <%= button_to 'Delete', form_question_path(@form, question), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:underline ml-2' %>
  </div>
<% end %>

<%= link_to 'Add Question', new_form_question_path(@form), class: 'inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600' %>
<%= link_to 'Back to Forms', forms_path, class: 'inline-block bg-gray-300 text-gray-700 px-4 py-2 rounded hover:bg-gray-400 ml-2' %>