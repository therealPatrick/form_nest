<h1 class="text-2xl font-bold mb-4">Your Forms</h1>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @forms.each do |form| %>
    <div class="bg-white shadow rounded-lg p-4">
      <h2 class="text-xl font-semibold"><%= form.title %></h2>
      <p class="text-gray-600"><%= form.description %></p>
      <%= link_to 'View', form_path(form), class: 'text-blue-500 hover:underline' %>
      <%= link_to 'Edit', edit_form_path(form), class: 'text-blue-500 hover:underline ml-2' %>
      <%= button_to 'Delete', form_path(form), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:underline ml-2' %>
    </div>
  <% end %>
</div>
<%= link_to 'Create New Form', new_form_path, class: 'mt-4 inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600' %>